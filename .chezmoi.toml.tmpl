{{- $email := promptStringOnce . "email" "Email address" -}}
{{- $typeChoices := list "private" "work" -}}
{{- $type := promptChoiceOnce . "type" "PC type (work/private)" $typeChoices -}}

{{/* only used in private type */}}
{{- $ghKeyPath := "~/.ssh/private_github_ed25519.pub" -}}
{{- $ghNoreplyEmail := promptStringOnce . "github_noreply_email" "GitHub noreply email address" "63720564+m-wrzesien@users.noreply.github.com" -}}
{{- $ghUser := "m-wrzesien" -}}
{{- $kxcAge := promptStringOnce . "keepassxc_age_entry" "Path in KeepassXC db to Age private key" "IT/Keys/Age" -}}
{{- $kxcFile := promptStringOnce . "keepassxc_file" "Path to KeepassXC database file" "~/Documents/KeePass/Passwords.kdbx" -}}
{{- $kxcSSH := "IT/Keys/id_ed25519" -}}
{{- $kxcSSHAttachment := "id_ed25519.pub" -}}

[data]
    email = {{ $email | quote }}
    type = {{ $type | quote }}
{{- if eq $type "private" }}
    github_key_path = {{ $ghKeyPath | quote }}
    github_noreply_email = {{ $ghNoreplyEmail | quote }}
    github_public_key = "{{ (first (gitHubKeys $ghUser)).Key }}"
    github_user = {{ $ghUser | quote }}
    keepassxc_age_entry =  {{ $kxcAge | quote }}
    keepassxc_file = {{ $kxcFile | quote }}
{{/* workaround for first init on which keepassxc.database is empty */}}
{{- if ne .chezmoi.config.keepassxc.database "" }}
    ssh_key = """
        {{- keepassxcAttachment $kxcSSH $kxcSSHAttachment -}}
    """
{{ end }}

[keepassxc]
    database = {{ $kxcFile | quote }}
{{ end }}